<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Ürün Listesi</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 1rem;
      background: #f4f4f4;
    }

    .search-container {
      text-align: center;
      margin-bottom: 2rem;
    }

    .search-container input {
      padding: 0.5rem 1rem;
      width: 80%;
      max-width: 400px;
      font-size: 1rem;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    #noResults {
      display: none;
      text-align: center;
      font-size: 1.2rem;
      color: gray;
      margin-top: 2rem;
    }

    .box {
      margin-bottom: 2rem;
    }

    .kategori {
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      padding-left: 0.5rem;
    }

    .urunler {
      display: flex;
      overflow-x: auto;
      gap: 1rem;
      padding: 0.5rem;
    }

    .urun {
      min-width: 150px;
      background: white;
      padding: 1rem;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      flex: 0 0 auto;
      white-space: nowrap;
    }
  </style>
</head>
<body>

  <div class="search-container">
    <input type="text" id="searchInput" placeholder="Ürün ara...">
  </div>

  <div class="container">
    <div id="noResults">Sonuç bulunamadı.</div>

    <div class="box">
      <div class="kategori">Kalemler</div>
      <div class="urunler">
        <div class="urun">Pilot Kalem</div>
        <div class="urun">Dolma Kalem</div>
        <div class="urun">Tükenmez Kalem</div>
      </div>
    </div>

    <div class="box">
      <div class="kategori">Defterler</div>
      <div class="urunler">
        <div class="urun">Spiralli Defter</div>
        <div class="urun">Çizgili Defter</div>
        <div class="urun">Kareli Defter</div>
      </div>
    </div>

    <div class="box">
      <div class="kategori">Çantalar</div>
      <div class="urunler">
        <div class="urun">Okul Çantası</div>
        <div class="urun">Laptop Çantası</div>
        <div class="urun">Sırt Çantası</div>
      </div>
    </div>

  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const boxes = document.querySelectorAll('.box');
    const noResults = document.getElementById('noResults');

    searchInput.addEventListener('input', function () {
      const query = this.value.trim().toLowerCase();
      let totalMatches = 0;

      boxes.forEach(box => {
        const products = box.querySelectorAll('.urun');
        let boxHasMatch = false;

        products.forEach(product => {
          const text = product.textContent.toLowerCase();
          const match = text.includes(query);
          product.style.display = match ? 'block' : 'none';
          if (match) boxHasMatch = true;
        });

        box.style.display = boxHasMatch ? 'block' : 'none';
        if (boxHasMatch) totalMatches++;
      });

      noResults.style.display = totalMatches === 0 ? 'block' : 'none';
    });
  </script>

</body>
</html>
